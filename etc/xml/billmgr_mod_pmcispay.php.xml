<?xml version="1.0" encoding="UTF-8"?>
<mgrdata>
	<plugin name="pmcispay.php">
		<group>payment_method</group>
		<msg name="desc_short" lang="ru">CISPay</msg>
		<msg name="desc_short" lang="en">CISPay</msg>
		<msg name="desc_full" lang="ru">Платежный модуль CISPay</msg>
		<msg name="desc_full" lang="en">Payment module CISPay</msg>
		<msg name="price" lang="ru">Бесплатно</msg>
		<msg name="price" lang="en">Free</msg>
	</plugin>

	<metadata name="paymethod.edit.cispay.php" type="form">
		<form>
			<page name="methodprops">
				<field name="shop_uuid">
					<input name="shop_uuid" private="yes" required="yes" type="text"/>
				</field>
			</page>
		</form>
	</metadata>

	<lang name="en">
		<messages name="label_paymethod">
			<msg name="pmcispay.php">CISPay</msg>
			<msg name="module_pmcispay.php">CISPay</msg>
		</messages>
		<messages name="paymethod.edit.cispay.php">
			<msg name="shop_uuid">Merchant UUID (click on "?" near with the store ID)</msg>
		</messages>
	</lang>

	<lang name="ru">
		<messages name="label_paymethod">
			<msg name="pmcispay.php">CISPay</msg>
			<msg name="module_pmcispay.php">CISPay</msg>
		</messages>
		<messages name="paymethod.edit.cispay.php">
			<msg name="shop_uuid">UUID мерчанта (можно узнать нажав на "?" рядом с ID магазина)</msg>
		</messages>
	</lang>
</mgrdata>